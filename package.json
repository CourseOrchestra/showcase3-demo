  "homepage": "https://CourseOrchestra.github.io/showcase3-demo",
  "type": "module",
  "scripts": {
    "dev": "vite --port 3000 --host localhost",
    "build": "run-p type-check \"build-only {@}\" --",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "preview": "vite preview --port 8080 --host localhost",
    "test:unit": "vitest",
    "test:unit:ci": "vitest run",
    "test:component": "cypress open --component --browser chrome",
    "test:component:ci": "cypress run --headless --component --browser chrome",
    "test:e2e:dev": "start-server-and-test dev http-get://localhost:3000 'cypress open --e2e --browser chrome --config baseUrl=http://localhost:3000'",
    "test:e2e:preview": "start-server-and-test preview http://localhost:8080 'cypress open --e2e --browser chrome --config baseUrl=http://localhost:8080/showcase3-demo'",
    "test:e2e:ci": "start-server-and-test preview http://localhost:8080 'cypress run --headless --browser chrome --config baseUrl=http://localhost:8080/showcase3-demo'",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "axios": "^1.7.5",
    "core-js": "^3.38.1",
    "js-file-download": "^0.4.12",
    "maska": "^2.1.11",
    "pinia": "^2.2.2",
    "primeflex": "^3.3.1",
    "primeicons": "^7.0.0",
    "primevue": "^3.53.0",
    "roboto-fontface": "^0.10.0",
    "showcase3": "^1.15.1",
    "vue": "^3.4.38",
    "vue-axios": "^3.5.2",
    "vue-i18n": "^9.14.0",
    "vue-router": "^4.4.3",
    "vuetify": "^3.7.1"
  },
  "devDependencies": {
    "@intlify/vite-plugin-vue-i18n": "^7.0.0",
    "@pinia/testing": "^0.1.5",
    "@vitejs/plugin-vue": "^5.1.2",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/test-utils": "^2.4.6",
    "cypress": "13.14.0",
    "eslint": "^8.57.0",
    "eslint-plugin-cypress": "^3.5.0",
    "eslint-plugin-vue": "^9.27.0",
    "happy-dom": "^15.3.1",
    "lint-staged": "^15.2.9",
    "npm-run-all2": "^6.2.2",
