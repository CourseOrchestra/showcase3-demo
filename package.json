    "rollup-plugin-visualizer": "^5.12.0",
    "sass": "^1.77.8",
    "sass-loader": "^16.0.1",
    "start-server-and-test": "^2.0.5",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-vue-devtools": "^7.3.9",
    "vite-plugin-vuetify": "^2.0.4",
    "vitest": "^2.0.5",
    "vue-tsc": "^2.1.2",
    "yorkie": "^2.0.0"
